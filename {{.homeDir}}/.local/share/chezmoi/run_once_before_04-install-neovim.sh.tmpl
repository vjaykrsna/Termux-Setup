{{ if .install_neovim -}}
#!/data/data/com.termux/files/usr/bin/bash

# This script installs Neovim.

# --- Colors for output ---
C_RESET='\033[0m'
C_BLUE='\033[0;34m'

info() {
    printf "${C_BLUE}%s${C_RESET}\n" "$1"
}

info "--- Installing Neovim ---"

pkg install -y neovim

info "--- Neovim Installation Complete ---"
info "You can configure Neovim by creating a file at ~/.config/nvim/init.vim"
{{ end -}}
